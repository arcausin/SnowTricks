{{ form_errors(form.plainPassword.first) }}

{{ form_start(form) }}
    <div class="form-group mb-4">
        {{ form_label(form.username, 'Username', {'label_attr': {'class': 'form-label fs-3'}})}}
        {{ form_widget(form.username, {'attr': {'class': 'form-control w-75 text-center mx-auto'}})}}
    </div>

    {% if user.illustration %}
        <h2 class="text-center fs-2 mb-3">Profile icon</h2>

        <img class="shadow img-fluid rounded mb-3 col-6" src="{{ asset('uploads/profiles/' ~ user.illustration) }}" alt="">
    {% endif %}
    
    <h2 class="text-center text-secondary fs-2 mb-3">Optional</h2>

    <div class="border border-secondary rounded-4 p-3 mb-4">
        <div class="form-group border rounded-4 mb-3">
            {{ form_label(form.illustration, 'Illustration', {'label_attr': {'class': 'form-label text-secondary fs-3 px-3 mb-3'}})}}
            {{ form_widget(form.illustration, {'attr': {'class': 'custom-file-input w-75 text-center mx-auto mb-3'}})}}
        </div>

        <div class="form-group mb-3">
            {{ form_label(form.plainPassword.first, 'New password', {'label_attr': {'class': 'form-label text-secondary fs-3'}})}}
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control w-75 text-center mx-auto'}})}}
        </div>
    
        <div class="form-group mb-4">
            {{ form_label(form.plainPassword.second, 'Repeat password', {'label_attr': {'class': 'form-label text-secondary fs-3'}})}}
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control w-75 text-center mx-auto'}})}}
        </div>
    </div>

    <button class="btn btn-light mb-3">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
