{% extends 'base.html.twig' %}

{% block title %}Edit Profile - SnowTricks{% endblock %}

{% block body %}
<h1 class="text-center fs-1 mt-5 mb-5">Edit <b>{{ user.username }}</b> Profile</h1>

<div class="col-12 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show my-3" role="alert">
            <i class="bi bi-check-circle-fill"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="text-center border shadow rounded-4 p-4 mb-5">
        {{ include('profile/_form.html.twig', {'button_label': 'Update'}) }}
    </div>
</div>
{% endblock %}
