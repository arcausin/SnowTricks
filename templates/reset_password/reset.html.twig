{% extends 'base.html.twig' %}

{% block title %}Reset Password - SnowTricks{% endblock %}

{% block body %}
    <h1 class="text-center fs-1 mt-5 mb-5">Reset Password</h1>

    <div class="col-12 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
        <div class="text-center border shadow rounded-4 p-4 mb-5">
            {{ form_start(resetForm) }}
                <div class="form-group mb-3">
                    {{ form_label(resetForm.plainPassword.first, 'New password', {'label_attr': {'class': 'form-label fs-3'}})}}
                    {{ form_widget(resetForm.plainPassword.first, {'attr': {'class': 'form-control w-75 text-center mx-auto'}})}}
                </div>
            
                <div class="form-group mb-4">
                    {{ form_label(resetForm.plainPassword.second, 'Repeat password', {'label_attr': {'class': 'form-label fs-3'}})}}
                    {{ form_widget(resetForm.plainPassword.second, {'attr': {'class': 'form-control w-75 text-center mx-auto'}})}}
                </div>

                <button class="btn btn-primary">Reset password</button>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}