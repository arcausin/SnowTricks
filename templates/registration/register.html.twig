{% extends 'base.html.twig' %}

{% block title %}Registration - SnowTricks{% endblock %}

{% block body %}
<h1 class="text-center fs-1 mt-5 mb-5">Registration</h1>

<div class="col-12 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
    <div class="text-center border shadow rounded-4 p-4 mb-5">
        {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            <div class="form-group mb-3">
                {{ form_label(registrationForm.username, 'Username', {'label_attr': {'class': 'form-label fs-3'}})}}
                {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control w-75 text-center mx-auto'}})}}
            </div>

            <div class="form-group mb-3">
                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label fs-3'}})}}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control w-75 text-center mx-auto'}})}}
            </div>

            <div class="form-group mb-4">
                {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label fs-3'}})}}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control w-75 text-center mx-auto'}})}}
            </div>

            <div class="mb-4" style="display: none;">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'checked': 'checked'}}) }}
            </div>

            <button type="submit" class="btn btn-light mb-3">Create an account</button>
        {{ form_end(registrationForm) }}

        <div class="mb-0">
            <a class="fs-5" href="{{ path('app_login') }}">Already an account ?</a>
        </div>
    </div>
</div>
{% endblock %}
